{{>menuowner}}
<div class="content-owner">
  <div class="content">
    <p class="head-title">Add new hotel</p>

  </div>
  <div class="">
    <form action="/owner/hotels/add" method="post">
      <div class="col-md-12">
        <label for="inputEmail4" class="form-label">Name</label>
        <input type="text" class="form-control" id="inputEmail4" name="name"/>
      </div>
      <div class="col-md-12">
      <label for="exampleFormControlTextarea1" class="form-label">Description</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
      </div>
      <div class="col-12">
        <label for="inputAddress" class="form-label">Address</label>
        <input
          type="text"
          class="form-control"
          id="inputAddress"
          placeholder="1234 Main St"
          name="address"
        />
      </div>
      
      <div class="col-md-6">
        <label for="inputAmount" class="form-label">Amount</label>
        <input type="number" class="form-control" id="inputCity" name="amount" />
      </div>
      <div class="col-md-4">
        <label for="inputState" class="form-label">Type</label>
        <select id="inputState" class="form-select" name="type">
          <option selected value="villa">Villa</option>
          <option value="hotel">Hotel</option>
          <option value="resort">Resort</option>
          <option value="penhouse">Penhouse<option>
        </select>
      </div>
      <div class="col-md-2">
        <label for="inputZip" class="form-label">Phone</label>
        <input type="number" class="form-control" name="phone" />
      </div>
      
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Add new hotel</button>
      </div>
    </form>
  </div>

</div>