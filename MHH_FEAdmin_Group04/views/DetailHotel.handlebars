<div class="content">
  <h1>Hotel</h1>
  <img src={{product.picture}} alt="" />
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <button
        class="nav-link active"
        id="nav-home-tab"
        data-bs-toggle="tab"
        data-bs-target="#nav-home"
        type="button"
        role="tab"
        aria-controls="nav-home"
        aria-selected="true"
      >Description</button>
      <button
        class="nav-link"
        id="nav-profile-tab"
        data-bs-toggle="tab"
        data-bs-target="#nav-profile"
        type="button"
        role="tab"
        aria-controls="nav-profile"
        aria-selected="false"
      >Review</button>
      <button
        class="nav-link"
        id="nav-contact-tab"
        data-bs-toggle="tab"
        data-bs-target="#nav-contact"
        type="button"
        role="tab"
        aria-controls="nav-contact"
        aria-selected="false"
      >Comment</button>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div
      class="tab-pane fade show active"
      id="nav-home"
      role="tabpanel"
      aria-labelledby="nav-home-tab"
    >
      {{product.description}}
    </div>
    <div
      class="tab-pane fade"
      id="nav-profile"
      role="tabpanel"
      aria-labelledby="nav-profile-tab"
    >...</div>
    <div
      class="tab-pane comments fade"
      id="nav-contact"
      role="tabpanel"
      aria-labelledby="nav-contact-tab"
    >{{#if listExists}}

        {{#each comments}}
          <div class="container-fluid comment">
            <div class="card">
              <div class="row">
                <div class="col-2">
                  <p class="user">{{this.name}}</p>
                </div>
                <div class="col-6">
                  <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">{{this.comment}}</p>
                    <p class="card-text"><small class="text-muted">Last updated
                        3 mins ago</small></p>
                  </div>

                </div>
                <div class="col-2">
                  <form
                    method="POST"
                    action="/comment/{{this.id}}?_method=DELETE"
                  >
                    <button type="submit">Delete</button>
                  </form>

                </div>
              </div>
            </div>
          </div>
        {{/each}}

      {{/if}}
    </div>
  </div>
</div>
<div
  class="modal fade exampleModal"
  id=""
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Delete this comment ?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
        <button
          type="button"
          class="btn btn-primary"
          onclick="confirmdelete(id)"
        >Save changes</button>
      </div>
    </div>
  </div>
</div>

